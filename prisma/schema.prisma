// prisma/schema.prisma

datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

// ------------------------------------
// ENUM: OrderStatus (Status zamówienia)
// ------------------------------------
enum OrderStatus {
  PENDING    // Oczekujące na realizację
  PROCESSING // W trakcie realizacji
  SHIPPED    // Wysłane
  DELIVERED  // Dostarczone
  CANCELLED  // Anulowane
}

// ------------------------------------
// 1. Model Category (Kategorie produktów)
// ------------------------------------
model Category {
  id       Int       @id @default(autoincrement())
  name     String    @unique // Nazwa kategorii (unikalna)
  products Product[]
}

// ------------------------------------
// 2. Model Product (Produkty)
// ------------------------------------
model Product {
  id          Int        @id @default(autoincrement())
  code        String     @unique // Kod produktu (unikalny)
  name        String
  type        String     // Typ produktu (np. "procesor")
  description String?    @db.Text // Opis produktu (opcjonalny)
  price       Float      // Cena (z dwoma miejscami po przecinku)
  amount      Int        // Stan magazynowy (liczba sztuk)
  image       String?    // Ścieżka do obrazka (opcjonalna)
  createdAt   DateTime   @default(now()) // Data utworzenia (automatyczna)
  updatedAt   DateTime   @updatedAt     // Data ostatniej aktualizacji (automatyczna)
  
  // Relacja 1:M (do Category)
  categoryId  Int
  category    Category   @relation(fields: [categoryId], references: [id])

  // Relacje M:M (przez tabele pośrednie)
  cartItems   CartItem[] 
  orderItems  OrderItem[]
  
  @@index([categoryId]) // Indeks na categoryId
  @@index([code])       // Indeks na code
}

// ------------------------------------
// 3. Modele Auth.js + User
// ------------------------------------
// For Authorization with Auth.js
model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  accounts      Account[]
  sessions      Session[]

  // Dodanie obsługi wymaganej w modelach danych tej aplikacji
  cart          Cart?
  orders        Order[]

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ------------------------------------
// 4. Model Cart (Koszyk) - Zaktualizowany userId
// ------------------------------------
model Cart {
  id          Int         @id @default(autoincrement())
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  // Relacja 1:1 (unikalne powiązanie z User)
  userId      String      @unique // ZMIANA: Z Int na String
  user        User        @relation(fields: [userId], references: [id])

  // Elementy koszyka
  items       CartItem[]
}

// ------------------------------------
// 5. Model CartItem (Produkty w koszyku)
// ------------------------------------
model CartItem {
  id          Int         @id @default(autoincrement())
  quantity    Int         @default(1) // Ilość produktu (domyślnie 1)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  // Klucze obce
  cartId      Int
  cart        Cart        @relation(fields: [cartId], references: [id], onDelete: Cascade) // Usunięcie koszyka usuwa CartItem

  productId   Int
  product     Product     @relation(fields: [productId], references: [id], onDelete: Cascade) // Usunięcie produktu usuwa CartItem

  // Ograniczenie unikalnej pary
  @@unique([cartId, productId])
  @@index([cartId])
  @@index([productId])
}

// ------------------------------------
// 6. Model Order (Zamówienia) - Zaktualizowany userId
// ------------------------------------
model Order {
  id            Int         @id @default(autoincrement())
  orderNumber   String      @unique @default(cuid()) // Numer zamówienia (unikalny, automatyczny)
  status        OrderStatus @default(PENDING) // Status zamówienia (enum)
  totalAmount   Float // Całkowita kwota
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  // Powiązanie z użytkownikiem
  userId        String // ZMIANA: Z Int na String
  user          User        @relation(fields: [userId], references: [id])
  
  // Zawiera elementy zamówienia
  items         OrderItem[]

  @@index([userId])
  @@index([orderNumber])
}

// ------------------------------------
// 7. Model OrderItem (Produkty w zamówieniu)
// ------------------------------------
model OrderItem {
  id            Int       @id @default(autoincrement())
  quantity      Int
  priceAtOrder  Float     // Cena w momencie zakupu
  productName   String    // Kopia nazwy produktu
  productCode   String    // Kopia kodu produktu
  
  // Klucze obce
  orderId       Int
  order         Order     @relation(fields: [orderId], references: [id], onDelete: Cascade) // Usunięcie zamówienia usuwa OrderItem

  productId     Int?      // Powiązanie z produktem (opcjonalne)
  // Gdy produkt usunięty -> NIE usuwaj OrderItem (Restrict)
  product       Product?  @relation(fields: [productId], references: [id], onDelete: Restrict)

  @@index([orderId])
  @@index([productId])
}